---
import { apis } from "../config/apis";
import ThemeToggle from "./ThemeToggle";
import { Logo } from "./Logo";
import SidebarAstro from "./SidebarAstro.astro";

interface Props {
	title?: string;
	selectedApiName?: string | null;
}

const { title = "Welcome", selectedApiName = null } = Astro.props;
---

<div class="flex flex-col h-screen overflow-hidden bg-gray-100 dark:bg-zinc-900">
	<header class="flex items-center justify-between px-6 py-4 bg-black border-b border-zinc-700 shadow-sm z-10 shrink-0">
		<a href="/" class="text-white no-underline">
			<Logo />
		</a>
		<h3 class="mb-0 text-xl font-bold text-white">
			{title}
		</h3>
		<ThemeToggle client:only="react" />
	</header>
	<div class="flex h-screen overflow-hidden bg-gray-100 dark:bg-zinc-900">
		<SidebarAstro apis={apis} selectedApiName={selectedApiName} />
		<div class="flex-grow flex flex-col h-screen overflow-hidden">
			<main class="flex-grow overflow-y-auto bg-white dark:bg-zinc-800 relative" >
				<slot />
			</main>
		</div>
	</div>
</div>